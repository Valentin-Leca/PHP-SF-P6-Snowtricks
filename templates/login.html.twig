{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid tm-mt-60">
        <div class="row tm-mb-50 log-body">
            <div class="col-lg-4 offset-4 col-12 mb-5">
                <h2 class="tm-text-primary text-center mb-5">Connexion</h2>
                {{ form_start(form, {
                    'attr': {
                        'class': 'tm-contact-form mx-auto',
                        'id': 'login-form',
                    }
                }) }}
                <div class="form-group mt-2 mb-2">
                    {{ form_widget(form.login) }}
                    {{ form_errors(form.login) }}
                </div>
                <hr>
                <div class="form-group mt-2 mb-2">
                    {{ form_widget(form.password) }}
                    {{ form_errors(form.password) }}
                </div>
                {{ form_rest(form) }}
                <hr>
                <div class="form-group text-center mt-5 mb-5">
                    <a href="">Mot de passe oubli√© ?</a>
                </div>
                <div class="form-group tm-text-right text-center">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid tm-mt-60">
        <div class="row tm-mb-50 log-body">
            <div class="col-lg-4 offset-4 col-12 mb-5">
                <h2 class="tm-text-primary text-center mb-5">RÃ©initialisation du mot de passe</h2>
                {{ form_start(form, {
                    'attr': {
                        'class': 'tm-contact-form mx-auto',
                        'id': 'register-form',
                    }
                }) }}
                    <div class="form-group mt-2 mb-2">
                        {{ form_widget(form.login) }}
                        {{ form_errors(form.login) }}
                    </div>
                    {{ form_rest(form) }}
                    <hr>
                    <div class="form-group tm-text-right text-center mt-5">
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                    <div class="form-group mt-2 mb-5 text-center">
                        {% for message in app.flashes('success') %}
                            {{ message }}
                        {% endfor %}
                    </div>
            </div>
        </div>
    </div>

{% endblock %}

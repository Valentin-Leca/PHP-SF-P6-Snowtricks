{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid tm-mt-60">
        <div class="row tm-mb-50 log-body">
            <div class="col-12 mb-5">
                <h2 class="tm-text-primary text-center mb-5">RÃ©initialisation du mot de passe</h2>
                    {% for message in app.flashes('success') %}
                        <div class="form-group mt-2 mb-2 text-center alert alert-success" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="form-group mt-2 mb-2 text-center alert alert-danger" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                <form class="tm-contact-form mx-auto" id="login-form" action="{{ path('forgetPassword') }}" method="post">
                    <div class="form-group mt-2 mb-2">
                        <label for="email"></label>
                        <input type="email" class="form-control rounded-0" id="email" name="mail" placeholder="Adresse e-mail"/>
                    </div>
                    <hr>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="form-group tm-text-right text-center">
                        <button class="btn btn-primary mt-5" type="submit">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

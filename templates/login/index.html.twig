{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid tm-mt-60">
        <div class="row tm-mb-50 log-body">
            <div class="col-lg-4 offset-4 col-12 mb-5">
                <h2 class="tm-text-primary text-center mb-5">Connexion</h2>

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form class="tm-contact-form mx-auto" id="login-form" action="{{ path('login') }}" method="post">

                    <div class="form-group mt-2 mb-2">
                        <label for="username"></label>
                        <input type="text" class="form-control rounded-0" id="username" name="_username" placeholder="Nom d'utilisateur" value="{{ last_username }}"/>
                    </div>
                    <hr>
                    <div class="form-group mt-2 mb-2">
                        <label for="password"></label>
                        <input type="password" class="form-control rounded-0" id="password" name="_password" placeholder="Mot de passe"/>
                    </div>
                    <hr>
                    <div class="form-group text-center mt-5">
                        <label for="checkbox"></label>
                        <input type="checkbox" id="checkbox" name="_remember_me" checked/>Se souvenir de moi ?
                    </div>
                    <div class="form-group tm-text-right text-center">
                        <a href="{{ path('forgetPassword') }}">Mot de passe oubli√© ?</a>
                    </div>
                    <hr>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# If you want to control the URL the user is redirected to on success
                        <input type="hidden" name="_target_path" value="/account"/> #}

                    <div class="form-group tm-text-right text-center">
                        <button class="btn btn-primary mt-5" type="submit">Se connecter</button>
                    </div>
                    <div class="form-group mt-2 mb-2 text-center">
                        {% for messages in app.flashes(['success', 'error']) %}
                            {% for message in messages %}
                                {{ message }}
                            {% endfor %}
                        {% endfor %}
                    </div>
                </form>
            </div>
        </div>
    </div>



{% endblock %}

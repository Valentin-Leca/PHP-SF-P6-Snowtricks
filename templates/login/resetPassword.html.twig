{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid tm-mt-60">
        <div class="row tm-mb-50 log-body">
            <div class="col-12 mb-5">
                <h2 class="tm-text-primary text-center mb-5">Réinitialisation du mot de passe</h2>
                {% for messages in app.flashes(['success', 'error']) %}
                    {% for message in messages %}
                        <div class="form-group mt-2 mb-2 text-center alert alert-danger" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <form class="tm-contact-form mx-auto" id="login-form" action="{{ path('resetPassword', {'login':user.login,'token':user.token}) }}" method="post">
                    <div class="form-group mt-2 mb-2">
                        <label for="password"></label>
                        <input type="password" class="form-control rounded-0" id="password" name="password" required placeholder="Nouveau mot de passe"/>
                    </div>
                    <hr>
                    <div class="form-group mt-2 mb-2">
                        <label for="password"></label>
                        <input type="password" class="form-control rounded-0" id="password" name="secondPassword" required placeholder="Répétez le nouveau mot de passe"/>
                    </div>
                    <hr>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="form-group tm-text-right text-center">
                        <button class="btn btn-primary mt-5" type="submit">Changer de mot de passe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
